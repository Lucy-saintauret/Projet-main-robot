<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- ring of the hand -->
  <xacro:macro name="ring" params="parent *origin *mimic">
    <!-- Joint entre base_footprint et base_link -->
    <joint name="ring_base_joint_fixed" type="revolute">
      <parent link="${parent}"/>
      <child link="ring_base_left_link"/>
      <xacro:insert_block name="origin"/>
      <axis xyz="0 1 0"/>
      <limit effort="10.0" lower="${-30 * pi / 180}" upper="${0 * pi / 180}" velocity="0.3"/>
      <xacro:insert_block name="mimic"/>
    </joint>
    
    <!-- ring base left -->
    <link name="ring_base_left_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="0.004 -0.0148 -0.005" rpy="0 ${-1 * pi / 180} 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for ring base left -->
    <gazebo reference="ring_base_left_link">
      <material>Gazebo/White</material>
    </gazebo>
    
    <joint name="ring_base_joint" type="revolute">
      <origin xyz="0.114 0.0374 -0.003" rpy="${180 * pi / 180} ${-29 * pi / 180} ${180 * pi / 180}"/>
      <parent link="${parent}"/>
      <child link="ring_base_right_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.002" upper="-0.004" velocity="0.8"/>
      <xacro:insert_block name="mimic"/>
    </joint>

    <!-- ring base right -->
    <link name="ring_base_right_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.058 0.001 -0.0212" rpy="${-90 * pi / 180} 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for ring base right -->
    <gazebo reference="ring_base_right_link">
      <material>Gazebo/White</material>
    </gazebo>

    <joint name="ring_middle_left_base_left_joint" type="revolute">
      <origin xyz="-0.052 -0.005 0.006" rpy="${90 * pi / 180} ${70 * pi / 180} 0"/>
      <parent link="ring_base_left_link"/>
      <child link="ring_middle_left_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="${0 * pi / 180}" upper="${130 * pi / 180}" velocity="0.8"/>
      <mimic joint="ring_base_joint" multiplier="-1.4" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- ring base right -->
    <link name="ring_middle_left_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_middle_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="0.0063 0.0068 -0.0045" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_middle_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link> 
    

    <!-- Color Gazebo for ring base right -->
    <gazebo reference="ring_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>


    <joint name="ring_middle_right_base_left_joint" type="revolute">
      <origin xyz="-0.0515 -0.0005 0.012" rpy="${-90 * pi / 180} ${115 * pi / 180} 0"/>
      <parent link="ring_base_left_link"/>
      <child link="ring_middle_right_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="${0 * pi / 180}" upper="${130 * pi / 180}" velocity="0.8"/>
      <mimic joint="ring_base_joint" multiplier="1.4" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- ring base right -->
    <link name="ring_middle_right_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_middle_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.0186 0.0047 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_middle_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for ring base right -->
    <gazebo reference="ring_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>

    <joint name="ring_end_middle_left_joint" type="revolute">
      <origin xyz="-0.031 0 -0.003" rpy="${90 * pi / 180} ${0 * pi / 180} ${140 * pi / 180}"/>
      <parent link="ring_middle_left_link"/>
      <child link="ring_end_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="${0 * pi / 180}" upper="${80 * pi / 180}" velocity="0.8"/>
      <mimic joint="ring_base_joint" multiplier="-1" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- ring base right -->
    <link name="ring_end_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_end.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.0241 -0.0156 -0.0058" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/ring_end.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for ring base right -->
    <gazebo reference="ring_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>

  </xacro:macro>
</robot>
<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- middle of the hand -->
  <xacro:macro name="middle" params="parent *origin">
    <!-- Joint entre base_footprint et base_link -->
    <joint name="middle_base_joint_fixed" type="fixed">
      <parent link="${parent}"/>
      <child link="middle_base_left_link"/>
      <xacro:insert_block name="origin"/>
    </joint>
    
    <!-- middle base left -->
    <link name="middle_base_left_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="0.004 0.028 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0.028 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>


    <!-- Color Gazebo for middle base left -->
    <gazebo reference="middle_base_left_link">
      <material>Gazebo/White</material>
    </gazebo>
    
    <joint name="middle_base_joint" type="prismatic">
      <origin xyz="-0.03 0.0147 0.01" rpy="${-90 * pi / 180} ${28 * pi / 180} 0"/>
      <parent link="middle_base_left_link"/>
      <child link="middle_base_right_link"/>
      <limit effort="1000.0" lower="0.002" upper="-0.004" velocity="0.8"/>
    </joint>

    <!-- middle base right -->
    <link name="middle_base_right_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.03 -0.0209 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for middle base right -->
    <gazebo reference="middle_base_right_link">
      <material>Gazebo/White</material>
    </gazebo>

    <joint name="middle_middle_left_base_left_joint" type="revolute">
      <origin xyz="-0.056 0.0103 0.0108" rpy="${90 * pi / 180} ${45 * pi / 180} 0"/>
      <parent link="middle_base_left_link"/>
      <child link="middle_middle_left_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="2" upper="0" velocity="0.8"/>
      <mimic joint="middle_base_joint" multiplier="-200" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- middle base right -->
    <link name="middle_middle_left_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_middle_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.0605 0.0142 -0.0045" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_middle_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for middle base right -->
    <gazebo reference="middle_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>


    <joint name="middle_middle_right_base_left_joint" type="revolute">
      <origin xyz="-0.0555 0.0147 0.0167" rpy="${-90 * pi / 180} ${90 * pi / 180} 0"/>
      <parent link="middle_base_left_link"/>
      <child link="middle_middle_right_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="2" upper="0" velocity="0.8"/>
      <mimic joint="middle_base_joint" multiplier="200" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- middle base right -->
    <link name="middle_middle_right_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_middle_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.0168 -0.0047 0" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_middle_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for middle base right -->
    <gazebo reference="middle_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>

    <joint name="middle_end_middle_left_joint" type="revolute">
      <origin xyz="-0.031 0 -0.003" rpy="${90 * pi / 180} 0 ${180 * pi / 180}"/>
      <parent link="middle_middle_left_link"/>
      <child link="middle_end_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="2" upper="0" velocity="0.8"/>
      <mimic joint="middle_base_joint" multiplier="-200" offset="${60 * pi / 180}"/>
    </joint>
    
    <!-- middle base right -->
    <link name="middle_end_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_end.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.0241 -0.0156 -0.0058" rpy="0 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/middle_end.stl" scale="0.001 0.001 0.001"/>
        </geometry> 
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for middle base right -->
    <gazebo reference="middle_middle_left_link">
      <material>Gazebo/White</material>
    </gazebo>

  </xacro:macro>
</robot>
<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- pinky of the hand -->
  <xacro:macro name="pinky" params="parent *origin *mimic">
    <!-- Joint entre base_footprint et base_link -->
    <joint name="pinky_base_joint_fixed" type="revolute">
      <parent link="${parent}"/>
      <child link="pinky_base_left_link"/>
      <xacro:insert_block name="origin"/>
      <axis xyz="0 1 0"/>
      <limit effort="10.0" lower="${-30 * pi / 180}" upper="${0 * pi / 180}" velocity="0.3"/>
      <xacro:insert_block name="mimic"/>
    </joint>
    
    <!-- pinky base left -->
    <link name="pinky_base_left_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/pinky_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.012 -0.0006 -0.005" rpy="0 ${-1 * pi / 180} ${180 * pi / 180}"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/pinky_base_left.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for pinky base left -->
    <gazebo reference="pinky_base_left_link">
      <material>Gazebo/White</material>
    </gazebo>
    
    <joint name="pinky_base_joint" type="revolute">
      <origin xyz="0.111 0.067 -0.005" rpy="${175 * pi / 180} ${-40 * pi / 180} ${195 * pi / 180}"/>
      <parent link="${parent}"/>
      <child link="pinky_base_right_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.002" upper="-0.004" velocity="0.8"/>
      <xacro:insert_block name="mimic"/>
    </joint>

    <!-- pinky base right -->
    <link name="pinky_base_right_link">
      <visual>
        <geometry>
          <mesh filename="package://hand_description/meshes/pinky_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="white"/>
        <origin xyz="-0.016 0.001 -0.0" rpy="${-90 * pi / 180} 0 0"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://hand_description/meshes/pinky_base_right.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:cylinder_inertia mass="0.5" radius="0.08" length="0.25"/>
    </link>
    

    <!-- Color Gazebo for pinky base right -->
    <gazebo reference="pinky_base_right_link">
      <material>Gazebo/White</material>
    </gazebo>

